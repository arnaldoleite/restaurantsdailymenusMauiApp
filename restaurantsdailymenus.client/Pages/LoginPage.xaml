             xmlns:localization="clr-namespace:restaurantsdailymenus.client.Resources.Localization"
             x:Class="restaurantsdailymenus.client.Pages.LoginPage"
             Title="{x:Static localization:AppResources.login}">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label 
            Text="{OnPlatform iOS='iOS', Android='Android', WinUI='WinUI'}" 
            HorizontalTextAlignment="Center" 
            TextColor="{x:Static Member=notes:SharedResources.FontColor}"/>
        <Entry Placeholder="{x:Static localization:AppResources.login}" Text="{Binding Username}" />
        <Entry Placeholder="{x:Static localization:AppResources.password}" Text="{Binding Password}" IsPassword="True" />
        <Button Text="{x:Static localization:AppResources.login}" Command="{Binding LoginCommand}" />
        <Button Text="{x:Static localization:AppResources.creat_account}"  Command="{Binding GoToRegisterCommand}" />
