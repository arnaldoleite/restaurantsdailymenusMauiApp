<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
x:Class="restaurantsdailymenus.client.Pages.RestaurantDetailsPage"
Title="Restaurant Details">


    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="{Binding Restaurant.Name}" FontAttributes="Bold" FontSize="24" />
        <Label Text="{Binding Restaurant.Address}" />
        <Label Text="Phone: {Binding Restaurant.Phone}" />
        <Label Text="Description: {Binding Restaurant.Description}" />


        <Button Text="View Daily Menus" Command="{Binding OpenDailyMenusCommand}" />
    </VerticalStackLayout>


</ContentPage>