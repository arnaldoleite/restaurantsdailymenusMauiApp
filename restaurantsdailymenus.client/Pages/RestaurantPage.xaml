<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:localization="clr-namespace:restaurantsdailymenus.client.Resources.Localization"
    xmlns:LocalEntry="clr-namespace:restaurantsdailymenus.client.Services"
    x:Class="restaurantsdailymenus.client.Pages.RestaurantPage"
    Title="{x:Static localization:AppResources.restaurant}">

    <ScrollView>
        <Grid>
            <VerticalStackLayout Padding="20" Spacing="10">
            
                <Label Text="{x:Static localization:AppResources.name}" FontSize="18" VerticalOptions="Center" />
                <Frame BorderColor="LightGray" CornerRadius="12" Padding="{OnPlatform Android='0,0', iOS='0,10'}">
                    <LocalEntry:BorderlessEntry Placeholder="{x:Static localization:AppResources.name}" Text="{Binding Restaurant.Name}" ClearButtonVisibility="WhileEditing"/>
                </Frame>

                <Label Text="{x:Static localization:AppResources.address}" FontSize="18" VerticalOptions="Center" />
                <Frame BorderColor="LightGray" CornerRadius="12" Padding="{OnPlatform Android='0,0', iOS='0,10'}">
                    <LocalEntry:BorderlessEntry Placeholder="{x:Static localization:AppResources.address}" Text="{Binding Restaurant.Address}"  ClearButtonVisibility="WhileEditing"/>
                </Frame>
                <Label Text="{x:Static localization:AppResources.phone}" FontSize="18" VerticalOptions="Center" />
                <Frame BorderColor="LightGray" CornerRadius="12" Padding="{OnPlatform Android='0,0', iOS='0,10'}">
                    <LocalEntry:BorderlessEntry Placeholder="{x:Static localization:AppResources.phone}" Keyboard="Telephone" Text="{Binding Restaurant.Phone}"  ClearButtonVisibility="WhileEditing"/>
                </Frame>
                <Label Text="{x:Static localization:AppResources.description}" FontSize="18" VerticalOptions="Center" />
                <Frame BorderColor="LightGray" CornerRadius="12" Padding="{OnPlatform Android='0,0', iOS='0,10'}">
                    <LocalEntry:BorderlessEntry Placeholder="{x:Static localization:AppResources.description}" Text="{Binding Restaurant.Description}"  ClearButtonVisibility="WhileEditing"/>
                </Frame>
                <Label Text="{x:Static localization:AppResources.logo_URL}" FontSize="18" VerticalOptions="Center" />
                <Frame BorderColor="LightGray" CornerRadius="12" Padding="{OnPlatform Android='0,0', iOS='0,10'}">
                    <LocalEntry:BorderlessEntry Placeholder="{x:Static localization:AppResources.logo_URL}" Text="{Binding Restaurant.LogoUrl}"  ClearButtonVisibility="WhileEditing"/>7
                </Frame>

                <Label Text="{x:Static localization:AppResources.background_URL}" FontSize="18" VerticalOptions="Center" />
                <Frame BorderColor="LightGray" CornerRadius="12" Padding="{OnPlatform Android='0,0', iOS='0,10'}">
                    <LocalEntry:BorderlessEntry Placeholder="{x:Static localization:AppResources.background_URL}" Text="{Binding Restaurant.BackgroundUrl}"  ClearButtonVisibility="WhileEditing"/>
                </Frame>

                <Label Text="{x:Static localization:AppResources.localizacao}" FontSize="18" VerticalOptions="Center" />
                <Grid ColumnDefinitions="*,*,Auto" ColumnSpacing="10">
                    <Frame Grid.Column="0" BorderColor="LightGray" CornerRadius="12" Padding="{OnPlatform Android='0,0', iOS='0,10'}">
                        <LocalEntry:BorderlessEntry Placeholder="{Binding Latitude}" IsReadOnly="True" Keyboard="Numeric" Text="{Binding Restaurant.Latitude}" />
                    </Frame>
                    <Frame Grid.Column="1" BorderColor="LightGray" CornerRadius="12" Padding="{OnPlatform Android='0,0', iOS='0,10'}">
                        <LocalEntry:BorderlessEntry Placeholder="{Binding Longitude}" IsReadOnly="True" Keyboard="Numeric" Text="{Binding Restaurant.Longitude}" />
                    </Frame>
                    <Button Grid.Column="2" Text="{x:Static localization:AppResources.local}" Command="{Binding GetLocalGPSCommand}" IsEnabled="{Binding IsNotBusy}"/>
                </Grid>

                <Button Text="{x:Static localization:AppResources.save}" Command="{Binding SaveCommand}" />
            </VerticalStackLayout>
            <Grid
                BackgroundColor="#80000000"
                IsVisible="{Binding IsBusy}">

                <ActivityIndicator
                    IsRunning="True"
                    Color="White"
                    HorizontalOptions="Center"
                    VerticalOptions="Center" />
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>