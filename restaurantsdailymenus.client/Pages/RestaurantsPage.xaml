<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
x:Class="restaurantsdailymenus.client.Pages.RestaurantsPage"
Title="Restaurants">


    <CollectionView ItemsSource="{Binding Restaurants}" SelectionMode="Single" SelectedItem="{Binding SelectedRestaurant}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="10" Margin="5" BorderColor="LightGray">
                    <VerticalStackLayout>
                        <Label Text="{Binding Name}" FontAttributes="Bold" />
                        <Label Text="{Binding Address}" FontSize="12" />
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>